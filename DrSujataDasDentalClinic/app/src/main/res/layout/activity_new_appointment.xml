<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/newAppointment"
        android:layout_width="271dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:onClick="addNewPatient"
        android:text="Add new patient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchPatientsListView" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="261dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:queryHint="Search Patients"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="196dp"
        android:layout_height="43dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="56dp"
        android:text="Search Patient"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/searchPatientsListView"
        android:layout_width="375dp"
        android:layout_height="451dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView" >

    </ListView>
</androidx.constraintlayout.widget.ConstraintLayout>